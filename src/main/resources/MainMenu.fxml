<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<!-- Simple main menu shown at startup. -->
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.MainMenuController"
      alignment="CENTER"
      spacing="12">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title of the game, using the existing large style. -->
    <Label fx:id="titleLabel"
           text="TetrisJFX"
           styleClass="gameOverStyle"/>

    <!-- Classic mode uses the current baseline behaviour. -->
    <Button fx:id="playClassicButton"
            text="Play Classic"
            onAction="#handlePlayClassic"
            styleClass="ipad-dark-grey"/>

    <!-- Survival mode will later have different rules/config (Phase 5.3). -->
    <Button fx:id="playSurvivalButton"
            text="Play Survival"
            onAction="#handlePlaySurvival"
            styleClass="ipad-dark-grey"/>

    <Button fx:id="quitButton"
            text="Quit"
            onAction="#handleQuit"
            styleClass="ipad-dark-grey"/>

    <!-- Reuse the same stylesheet as the game scene. -->
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</VBox>
